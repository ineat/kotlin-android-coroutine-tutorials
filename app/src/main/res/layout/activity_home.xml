<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.ineat.coroutine.HomeActivity"
    android:gravity="center">

    <Button
        android:id="@+id/simpleButton"
        android:text="@string/action_simple_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/advancedButton"
        android:text="@string/action_advanced_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/actorButton"
        android:text="@string/action_actor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
